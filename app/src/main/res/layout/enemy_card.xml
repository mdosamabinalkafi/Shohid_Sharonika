<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#050d14"
    android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/radius_shape3"
                >



                <androidx.cardview.widget.CardView
                    android:id="@+id/picLay"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"


                        >

                        <ImageView
                            android:id="@+id/enemyImgSet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/enemyNameSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F44336"
                    android:fontFamily="@font/bangla1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/enemyTaglineSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#CCFFFFFF"
                    android:fontFamily="@font/bangla1"
                    android:textSize="10sp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />



                <TextView
                    android:id="@+id/anemyCaseSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#CCFFFFFF"
                    android:fontFamily="@font/bangla1"
                    android:textSize="11sp"
                    android:gravity="left"
                    android:justificationMode="none"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </LinearLayout>











</LinearLayout>