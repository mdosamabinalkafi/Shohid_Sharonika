<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#050d14"
    tools:context=".ShohidDescribe">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/themeColor"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="195dp"
                android:layout_height="195dp"
                app:cardCornerRadius="10dp"
                android:elevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    >

                    <ImageView
                        android:id="@+id/imgSetId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameSetId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F44336"
                    android:fontFamily="@font/bangla1"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />


                <TextView
                    android:id="@+id/taglineSetId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="@font/bangla1"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />


                <TextView
                    android:id="@+id/varsityId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/bangla1"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/themeColor"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/radius_shape3"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বিস্তারিত তথ্য"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/bangla1"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বয়স"
                        android:textColor="#F44336"
                        android:fontFamily="@font/bangla1"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />


                    <TextView
                        android:id="@+id/ageId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:fontFamily="@font/bangla1"
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />


                </LinearLayout>

                <View

                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"
                    />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="জন্মস্থান"
                        android:textColor="#F44336"
                        android:fontFamily="@font/bangla1"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />


                    <TextView
                        android:id="@+id/placeId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:fontFamily="@font/bangla1"
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />


                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"
                    />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="মৃত্যু তারিখ"
                        android:textColor="#F44336"
                        android:fontFamily="@font/bangla1"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />


                    <TextView
                        android:id="@+id/deathId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff"
                        android:fontFamily="@font/bangla1"
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText,RtlHardcoded" />



                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/themeColor"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ব্যক্তিগত জীবন"
                    android:textColor="#F44336"
                    android:fontFamily="@font/bangla1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#F44336"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/lifestyleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#CCFFFFFF"
                android:justificationMode="inter_word"
                android:fontFamily="@font/bangla1"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="যেভাবে শহীদ হয়েছেন"
                    android:textColor="#F44336"
                    android:fontFamily="@font/bangla1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:background="#F44336"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/describeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#CCFFFFFF"
                android:justificationMode="inter_word"
                android:fontFamily="@font/bangla1"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="HardcodedText,RtlHardcoded" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>